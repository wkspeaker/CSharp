<Window x:Class="LangrisserTools.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LangrisserTools.Main"
        mc:Ignorable="d"
        Title="兰古利萨工具集" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="兰古利萨工具集" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>
        
        <!-- 工具按钮区域 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <!-- 三本团时间计算工具 -->
                <Button Name="TimeCalculatorButton"
                        Content="三本团时间计算" 
                        FontSize="16"
                        Padding="20,15"
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        Background="LightBlue"
                        Click="TimeCalculatorButton_Click"
                        ToolTip="计算公会团时间，生成消息模板"/>

                <Button Name="ToolBButton"
                        Content="活动轮数计算" 
                        FontSize="16"
                        Padding="20,15"
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        Background="LightGreen"
                        Click="ToolBButton_Click"
                        ToolTip="计算活动轮数及奖励"/>
                
                <!-- 占位按钮 - 未来工具 -->
                <Button Content="工具C (开发中)" 
                        FontSize="16"
                        Padding="20,15"
                        Margin="0,10"
                        HorizontalAlignment="Stretch"
                        Background="LightGray"
                        IsEnabled="False"
                        ToolTip="此工具正在开发中"/>
            </StackPanel>
        </ScrollViewer>
        
        <!-- 底部信息 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <TextBlock Text="版本: 1.0.0" FontSize="12" Foreground="Gray" Margin="0,0,20,0"/>
            <TextBlock Text="© 2025 兰古利萨工具集" FontSize="12" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</Window>
